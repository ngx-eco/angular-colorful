{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "changeDetection": "OnPush"
        }
      },
      "root": "projects/app",
      "sourceRoot": "projects/app",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@ng-doc/builder:application",
          "options": {
            "outputPath": "dist/app",
            "index": "projects/app/src/index.html",
            "browser": "projects/app/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "node_modules/@ng-doc/app/assets",
                "output": "assets/ng-doc/app"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@ng-doc/ui-kit/assets",
                "output": "assets/ng-doc/ui-kit"
              },
              {
                "glob": "**/*",
                "input": "ng-doc/app/assets",
                "output": "assets/ng-doc"
              },
              {
                "glob": "**/*",
                "input": "projects/app/src/assets",
                "output": "assets"
              },
              "projects/app/public/favicon.ico",
              "projects/app/public/manifest.webmanifest"
            ],
            "styles": [
              "node_modules/@ng-doc/app/styles/global.css",
              "projects/app/src/styles.scss"
            ],
            "scripts": [],
            "allowedCommonJsDependencies": [
              "@ng-doc/core"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1500kb",
                  "maximumError": "3mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "3kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": "projects/app/ngsw-config.json"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@ng-doc/builder:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "app:build:production"
            },
            "development": {
              "buildTarget": "app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/app/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/app/public/favicon.ico",
              "projects/app/src/assets",
              "projects/app/public/manifest.webmanifest"
            ],
            "styles": [
              "projects/app/src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    },
    "angular-colorful": {
      "projectType": "library",
      "root": "projects/angular-colorful",
      "sourceRoot": "projects/angular-colorful/src",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/angular-colorful/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/angular-colorful/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/angular-colorful/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/angular-colorful/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  }
}
