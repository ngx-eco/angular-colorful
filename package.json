{
  "name": "angular-colorful",
  "version": "5.0.0",
  "description": "A tiny color picker component for modern Angular apps",
  "author": "fil0157 <fil0157@ya.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngx-eco/angular-colorful.git"
  },
  "homepage": "https://angular-colorful.ru",
  "bugs": {
    "url": "https://github.com/ngx-eco/angular-colorful/issues"
  },
  "scripts": {
    "start": "ng serve app",
    "build": "ng build app --configuration production",
    "test": "ng test app",
    "lint": "ng lint app",
    "lint:fix": "ng lint app --fix",
    "lib:start": "ng build angular-colorful --watch",
    "lib:build": "ng build angular-colorful --configuration production && node tools/build-lib.js",
    "lib:test": "ng test angular-colorful",
    "lib:lint": "ng lint angular-colorful",
    "lib:lint:fix": "ng lint angular-colorful --fix",
    "lib:publish": "npm run lib:build && cd dist/lib && npm pack && npm publish",
    "update-deps": "ng update @angular/cli",
    "ngcc": "ngcc"
  },
  "dependencies": {
    "@angular/animations": "^17.0.2",
    "@angular/common": "^17.0.2",
    "@angular/compiler": "^17.0.2",
    "@angular/core": "^17.0.2",
    "@angular/forms": "^17.0.2",
    "@angular/platform-browser": "^17.0.2",
    "@angular/platform-browser-dynamic": "^17.0.2",
    "@angular/router": "^17.0.2",
    "@angular/service-worker": "^17.0.2",
    "@ng-doc/app": "16.16.0",
    "@ng-doc/builder": "16.16.0",
    "@ng-doc/core": "16.16.0",
    "@ng-doc/ui-kit": "16.16.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.2",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.0.0",
    "shelljs": "^0.8.5",
    "typescript": "~5.2.2"
  },
  "keywords": [
    "angular",
    "color",
    "ngx",
    "picker",
    "colorpicker"
  ]
}
