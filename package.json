{
  "name": "angular-colorful",
  "version": "3.0.0",
  "description": "A tiny color picker component for modern Angular apps",
  "author": "fil0157 <fil0157@ya.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngx-eco/angular-colorful.git"
  },
  "homepage": "https://angular-colorful.ru",
  "bugs": {
    "url": "https://github.com/ngx-eco/angular-colorful/issues"
  },
  "scripts": {
    "start": "ng serve",
    "build": "ng build --configuration production",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "style": "stylelint \"**.scss\"",
    "style:fix": "stylelint \"**.scss\" --fix",
    "lib:start": "ng build angular-colorful --watch",
    "lib:build": "ng build angular-colorful --configuration production && node tools/build-lib.js",
    "lib:test": "ng test angular-colorful",
    "lib:size": "size-limit",
    "lib:lint": "ng lint angular-colorful",
    "lib:lint:fix": "ng lint angular-colorful --fix",
    "lib:publish": "npm run lib:build && cd dist/lib && npm pack && npm publish",
    "update-deps": "ng update @angular/cli",
    "ngcc": "ngcc"
  },
  "dependencies": {
    "@angular/animations": "^15.2.9",
    "@angular/common": "^15.2.9",
    "@angular/compiler": "^15.2.9",
    "@angular/core": "^15.2.9",
    "@angular/forms": "^15.2.9",
    "@angular/platform-browser": "^15.2.9",
    "@angular/platform-browser-dynamic": "^15.2.9",
    "@angular/router": "^15.2.9",
    "@angular/service-worker": "^15.2.9",
    "rxjs": "~6.6.0",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.8",
    "@angular/cli": "^15.2.8",
    "@angular/compiler-cli": "^15.2.9",
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "csscolorit": "^2.2.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^15.2.2",
    "shelljs": "^0.8.4",
    "size-limit": "^4.7.0",
    "stylelint": "^13.7.2",
    "stylelint-order": "^4.1.0",
    "typescript": "~4.9.5"
  },
  "keywords": [
    "angular",
    "color",
    "ngx",
    "picker",
    "colorpicker"
  ]
}
