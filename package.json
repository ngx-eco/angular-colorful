{
  "name": "angular-colorful",
  "version": "3.0.0",
  "description": "A tiny color picker component for modern Angular apps",
  "author": "fil0157 <fil0157@ya.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngx-eco/angular-colorful.git"
  },
  "homepage": "https://angular-colorful.ru",
  "bugs": {
    "url": "https://github.com/ngx-eco/angular-colorful/issues"
  },
  "scripts": {
    "start": "ng serve app",
    "build": "ng build app --configuration production",
    "test": "ng test app",
    "lint": "ng lint app",
    "lint:fix": "ng lint app --fix",
    "style": "stylelint \"**.scss\"",
    "style:fix": "stylelint \"**.scss\" --fix",
    "lib:start": "ng build angular-colorful --watch",
    "lib:build": "ng build angular-colorful --configuration production && node tools/build-lib.js",
    "lib:test": "ng test angular-colorful",
    "lib:lint": "ng lint angular-colorful",
    "lib:lint:fix": "ng lint angular-colorful --fix",
    "lib:publish": "npm run lib:build && cd dist/lib && npm pack && npm publish",
    "update-deps": "ng update @angular/cli",
    "ngcc": "ngcc"
  },
  "dependencies": {
    "@angular/animations": "^16.0.1",
    "@angular/common": "^16.0.1",
    "@angular/compiler": "^16.0.1",
    "@angular/core": "^16.0.1",
    "@angular/forms": "^16.0.1",
    "@angular/platform-browser": "^16.0.1",
    "@angular/platform-browser-dynamic": "^16.0.1",
    "@angular/router": "^16.0.1",
    "@angular/service-worker": "^16.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.4.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.1",
    "@angular/cli": "^16.0.1",
    "@angular/compiler-cli": "^16.0.1",
    "@types/jasmine": "~4.3.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^16.0.1",
    "shelljs": "^0.8.5",
    "stylelint": "^13.7.2",
    "stylelint-order": "^4.1.0",
    "typescript": "~5.0.2"
  },
  "keywords": [
    "angular",
    "color",
    "ngx",
    "picker",
    "colorpicker"
  ]
}
